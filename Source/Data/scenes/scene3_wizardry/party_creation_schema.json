{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://omega-spiral.dev/contracts/scene3_wizardry_schema.json",
  "title": "Wizardry Party Creation Scene Schema",
  "description": "JSON schema for the party character creation scene data",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["wizardry_party"]
    },
    "title": {
      "type": "string",
      "description": "Scene title"
    },
    "description": {
      "type": "string",
      "description": "Scene description"
    },
    "characterCreation": {
      "type": "object",
      "properties": {
        "availableClasses": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["Fighter", "Mage", "Priest", "Thief", "Bard", "Paladin", "Ranger"]
          }
        },
        "availableRaces": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["Human", "Elf", "Dwarf", "Gnome", "Halfling", "HalfElf"]
          }
        },
        "partySize": {
          "type": "integer",
          "minimum": 1,
          "maximum": 6,
          "default": 3
        }
      },
      "required": ["availableClasses", "availableRaces"]
    },
    "ui": {
      "type": "object",
      "properties": {
        "namePrompt": {
          "type": "string"
        },
        "classLabel": {
          "type": "string"
        },
        "raceLabel": {
          "type": "string"
        },
        "statsLabel": {
          "type": "string"
        },
        "partyLabel": {
          "type": "string"
        },
        "addButtonText": {
          "type": "string"
        },
        "finishButtonText": {
          "type": "string"
        }
      }
    },
    "validation": {
      "type": "object",
      "properties": {
        "requireUniqueNames": {
          "type": "boolean",
          "default": true
        },
        "minimumStats": {
          "type": "object",
          "properties": {
            "strength": { "type": "integer", "minimum": 3 },
            "intelligence": { "type": "integer", "minimum": 3 },
            "wisdom": { "type": "integer", "minimum": 3 },
            "dexterity": { "type": "integer", "minimum": 3 },
            "constitution": { "type": "integer", "minimum": 3 },
            "charisma": { "type": "integer", "minimum": 3 }
          }
        }
      }
    }
  },
  "required": ["type", "characterCreation"]
}