{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://omega-spiral.dev/contracts/scene4_tile_dungeon_schema.json",
  "title": "Tile Dungeon Scene Schema",
  "description": "JSON schema for the 2D tile-based dungeon exploration scene data",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["tile_dungeon"]
    },
    "title": {
      "type": "string",
      "description": "Scene title"
    },
    "description": {
      "type": "string",
      "description": "Scene description"
    },
    "tilemap": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[A-Za-z0-9#.+@]+$"
      },
      "description": "ASCII representation of the dungeon layout"
    },
    "legend": {
      "type": "object",
      "patternProperties": {
        "^.$": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["Wall", "Floor", "Door", "Key", "Treasure", "Exit"]
            },
            "walkable": {
              "type": "boolean"
            },
            "interactable": {
              "type": "boolean"
            },
            "description": {
              "type": "string"
            }
          },
          "required": ["type", "walkable", "interactable", "description"]
        }
      },
      "description": "Mapping of symbols to tile definitions"
    },
    "ui": {
      "type": "object",
      "properties": {
        "showInventory": {
          "type": "boolean",
          "default": false
        },
        "showMap": {
          "type": "boolean",
          "default": false
        },
        "showStats": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "controls": {
      "type": "string",
      "description": "Control instructions for the player"
    },
    "exitCondition": {
      "type": "string",
      "description": "Condition to exit the dungeon"
    }
  },
  "required": ["type", "tilemap", "legend", "controls", "exitCondition"]
}