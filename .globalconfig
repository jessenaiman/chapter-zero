# Suppress CS1591 (Missing XML comment for publicly visible type or member) for generated files
dotnet_diagnostic.CS1591.severity = none

# Suppress common markdown-related warnings in XML documentation
dotnet_diagnostic.CS1570.severity = none  # XML comment warnings on return value
dotnet_diagnostic.CS1571.severity = none  # XML comment warnings on parameter
dotnet_diagnostic.CS1572.severity = none  # XML comment warnings on parameter
dotnet_diagnostic.CS1573.severity = none  # XML comment warnings on parameter
dotnet_diagnostic.CS1574.severity = none  # XML comment cref does not resolve
dotnet_diagnostic.CS1580.severity = none  # XML comment invalid cref attribute
dotnet_diagnostic.CS1581.severity = none  # XML comment invalid cref attribute
dotnet_diagnostic.CS1584.severity = none  # XML comment has syntactically incorrect cref attribute
dotnet_diagnostic.CS1734.severity = none  # XML comment has parameter that is not in the method signature
