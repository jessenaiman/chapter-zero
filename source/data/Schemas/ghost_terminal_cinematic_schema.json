{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://omegaspiral.com/schemas/ghost_terminal_cinematic.json",
  "type": "object",
  "required": [
    "type",
    "metadata",
    "bootSequence",
    "openingMonologue",
    "firstChoice",
    "storyFragment",
    "secretQuestion",
    "nameQuestion",
    "exit"
  ],
  "properties": {
    "type": {
      "type": "string",
      "enum": ["narrative_terminal_cinematic"]
    },
    "metadata": {
      "type": "object",
      "required": ["iteration", "iterationFallback", "previousAttempt", "interface", "status"],
      "properties": {
        "iteration": { "type": "string" },
        "iterationFallback": { "type": "integer", "minimum": 0 },
        "previousAttempt": { "type": "string" },
        "interface": { "type": "string" },
        "status": { "type": "string" },
        "note": { "type": "string" }
      },
      "additionalProperties": false
    },
    "bootSequence": {
      "type": "object",
      "required": ["glitchLines"],
      "properties": {
        "glitchLines": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "fadeToStable": { "type": "boolean" }
      },
      "additionalProperties": false
    },
    "openingMonologue": {
      "type": "object",
      "required": ["lines"],
      "properties": {
        "lines": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "cinematicTiming": { "type": "string" }
      },
      "additionalProperties": false
    },
    "firstChoice": {
      "type": "object",
      "required": ["setup", "question"],
      "properties": {
        "setup": {
          "type": "array",
          "items": { "type": "string" }
        },
        "question": {
          "type": "object",
          "required": ["prompt", "options"],
          "properties": {
            "prompt": { "type": "string" },
            "context": { "type": "string" },
            "options": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "required": ["id", "text", "dreamweaver", "scores"],
                "properties": {
                  "id": { "type": "string" },
                  "text": { "type": "string" },
                  "dreamweaver": { "type": "string" },
                  "scores": {
                    "$ref": "#/definitions/dreamweaverScore"
                  }
                },
                "additionalProperties": false
              }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "storyFragment": {
      "type": "object",
      "required": ["intro", "question", "continuation"],
      "properties": {
        "intro": {
          "type": "array",
          "items": { "type": "string" }
        },
        "question": {
          "type": "object",
          "required": ["prompt", "options"],
          "properties": {
            "prompt": { "type": "string" },
            "options": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["id", "text", "scores"],
                "properties": {
                  "id": { "type": "string" },
                  "text": { "type": "string" },
                  "philosophical": { "type": "string" },
                  "scores": {
                    "$ref": "#/definitions/dreamweaverScore"
                  }
                },
                "additionalProperties": false
              },
              "minItems": 1
            }
          },
          "additionalProperties": false
        },
        "continuation": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    },
    "secretQuestion": {
      "type": "object",
      "required": ["setup", "prompt", "options", "secretReveal"],
      "properties": {
        "setup": {
          "type": "array",
          "items": { "type": "string" }
        },
        "prompt": { "type": "string" },
        "options": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "text", "response", "scores"],
            "properties": {
              "id": { "type": "string" },
              "text": { "type": "string" },
              "response": { "type": "string" },
              "scores": {
                "$ref": "#/definitions/dreamweaverScore"
              }
            },
            "additionalProperties": false
          },
          "minItems": 1
        },
        "secretReveal": {
          "type": "object",
          "required": ["text"],
          "properties": {
            "visual": { "type": "string" },
            "text": {
              "type": "array",
              "items": { "type": "string" }
            },
            "persistent": { "type": "boolean" },
            "journalEntry": { "type": "string" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "nameQuestion": {
      "type": "object",
      "required": ["setup", "prompt", "options"],
      "properties": {
        "setup": {
          "type": "array",
          "items": { "type": "string" }
        },
        "prompt": { "type": "string" },
        "options": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "text", "dreamweaver", "scores"],
            "properties": {
              "id": { "type": "string" },
              "text": { "type": "string" },
              "dreamweaver": { "type": "string" },
              "scores": {
                "$ref": "#/definitions/dreamweaverScore"
              }
            },
            "additionalProperties": false
          },
          "minItems": 1
        }
      },
      "additionalProperties": false
    },
    "exit": {
      "type": "object",
      "required": ["selectedThread", "finalLines"],
      "properties": {
        "selectedThread": { "type": "string" },
        "finalLines": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "definitions": {
    "dreamweaverScore": {
      "type": "object",
      "properties": {
        "light": { "type": "integer", "minimum": 0 },
        "shadow": { "type": "integer", "minimum": 0 },
        "ambition": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    }
  }
}
