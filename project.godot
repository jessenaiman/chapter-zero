; Engine configuration file.
; It's best edited using the editor UI and not directly,
; since the parameters that go here are not all obvious.
;
; Format:
;   [section] ; section goes between []
;   param=value ; assign values to parameters

config_version=5

[application]

config/name="Î©mega Spiral"
config/description="A retro-styled narrative adventure game built with Godot 4.5 and C# 14"
run/main_scene="res://Source/Scenes/Scene1Narrative.tscn"
config/use_custom_user_dir=true
config/custom_user_dir_name="omega_spiral"
config/features=PackedStringArray("4.5", "C#")
boot_splash/bg_color=Color(0.15, 0.15, 0.25, 1)
boot_splash/show_image=false
#config/icon="uid://cb0tfa5vcg2tg"

[autoload]

SceneManager="*res://Source/Scripts/SceneManager.cs"
GameState="*res://Source/Scripts/common/GameState.cs"
NarratorEngine="*res://Source/Scripts/field/narrative/NarratorEngine.cs"
DreamweaverSystem="*res://Source/Scripts/field/narrative/DreamweaverSystem.cs"
FieldEvents="*res://Source/Scripts/field/FieldEvents.cs"
FieldCamera="*res://Source/Scripts/field/FieldCamera.cs"
Gameboard="*res://Source/Scripts/field/gameboard/Gameboard.cs"
GamepieceRegistry="*res://Source/Scripts/field/gamepieces/GamepieceRegistry.cs"
Player="*res://Source/Scripts/common/Player.cs"
CombatEvents="*res://Source/Scripts/combat/CombatEvents.cs"
Music="*res://Source/Scripts/common/music/MusicPlayer.tscn"
Transition="*res://Source/Scripts/common/screen_transitions/ScreenTransition.tscn"
Dialogic="*res://addons/dialogic/Core/DialogicGameHandler.gd"

[display]

window/size/viewport_width=1024
window/size/viewport_height=768
window/size/mode=2
window/stretch/mode="canvas_items"

[dotnet]

project/assembly_name="OmegaSpiral"
project/solution_directory="."

[editor]

movie_writer/movie_file="C:/Users/User/Videos/godot_movie.avi"

[editor_plugins]

enabled=PackedStringArray("res://addons/ai_assistant_hub/plugin.cfg", "res://addons/gdUnit4/plugin.cfg")

[gui]

theme/custom="res://theme.tres"

[plugins]

ai_assistant_hub/llm_api="ollama_api"
ai_assistant_hub/preferences/thinking_target=0
ai_assistant_hub/preferences/skip_greeting=false
ai_assistant_hub/preferences/always_scroll_to_bottom=false

[rendering]

renderer/rendering_method="gl_compatibility"
environment/defaults/default_clear_color=Color(0.15, 0.15, 0.25, 1)
