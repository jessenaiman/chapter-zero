[display]

window/size/viewport_width=1024
window/size/viewport_height=768
window/size/mode=2
window/stretch/mode="canvas_items"

[dotnet]

project/assembly_name="OmegaSpiral"
project/solution_directory="."

[editor]

movie_writer/movie_file="C:/Users/User/Videos/godot_movie.avi"

[editor_plugins]

enabled=PackedStringArray("res://addons/gdUnit4/plugin.cfg", "res://addons/godot_xterm/plugin.cfg", "res://addons/maaacks_game_template/plugin.cfg")

[gui]

theme/custom="res://theme.tres"

[internationalization]

locale/translations=PackedStringArray("res://addons/maaacks_game_template/base/translations/menus_translations.en.translation", "res://addons/maaacks_game_template/base/translations/menus_translations.fr.translation")
disable_install_audio_busses=true
disable_update_check=false
disable_install_wizard=true
copy_path="res://examples/"

[maaacks_game_template]

disable_install_audio_busses=true
disable_update_check=false
disable_install_wizard=true

[plugins]

ai_assistant_hub/llm_api="openrouter_api"
ai_assistant_hub/preferences/thinking_target=0
ai_assistant_hub/preferences/skip_greeting=false
ai_assistant_hub/preferences/always_scroll_to_bottom=false

[rendering]

renderer/rendering_method="gl_compatibility"
environment/defaults/default_clear_color=Color(0.15, 0.15, 0.25, 1)
