; since the parameters that go here are not all obvious.
;
; Format:
;   [section] ; section goes between []
;   param=value ; assign values to parameters

config_version=5

[application]

config/name="Î©mega Spiral"
config/description="A classic rpg narrative driven adventure game built with Godot 4.5.1 and C# 12"
run/main_scene="res://source/ui/menus/stage_select_menu.tscn"
config/use_custom_user_dir=true
config/custom_user_dir_name="omega_spiral"
config/features=PackedStringArray("4.5", "4.5.1", "C#")
boot_splash/bg_color=Color(0.15, 0.15, 0.25, 1)
boot_splash/image="uid://bs61h0k5maye5"
#config/icon="uid://cb0tfa5vcg2tg"

[autoload]

SceneManager="*res://source/scripts/SceneManager.cs"
GameState="*res://source/scripts/common/GameState.cs"
NarratorEngine="*res://source/narrative/NarratorEngine.cs"
DreamweaverSystem="*res://source/narrative/DreamweaverSystem.cs"
FieldEvents="*res://source/scripts/field/FieldEvents.cs"
FieldCamera="*res://source/scripts/field/FieldCamera.cs"
Gameboard="*res://source/scripts/field/gameboard/Gameboard.cs"
GamepieceRegistry="*res://source/scripts/field/gamepieces/GamepieceRegistry.cs"
Player="*res://source/scripts/common/Player.cs"
CombatEvents="*res://source/scripts/combat/CombatEvents.cs"
Music="*res://source/scripts/common/music/music_player.tscn"
Transition="*res://source/scripts/common/screen_transitions/screen_transition.tscn"
SceneLoader="*res://addons/maaacks_game_template/base/scenes/autoloads/scene_loader.tscn"
ProjectMusicController="*res://addons/maaacks_game_template/base/scenes/autoloads/project_music_controller.tscn"
ProjectUISoundController="*res://addons/maaacks_game_template/base/scenes/autoloads/project_ui_sound_controller.tscn"
AppConfig="*res://addons/maaacks_game_template/base/scenes/autoloads/app_config.tscn"

[display]

window/size/viewport_width=1024
window/size/viewport_height=768
window/size/mode=2
window/stretch/mode="canvas_items"

[dotnet]

project/assembly_name="chapter-zero"
project/solution_directory="."

[editor]

movie_writer/movie_file="C:/Users/User/Videos/godot_movie.avi"

[editor_plugins]

enabled=PackedStringArray("res://addons/gdUnit4/plugin.cfg", "res://addons/godot_xterm/plugin.cfg", "res://addons/maaacks_game_template/plugin.cfg")

[gui]

theme/custom="res://theme.tres"

[internationalization]

locale/translations=PackedStringArray("res://addons/maaacks_game_template/base/translations/menus_translations.en.translation", "res://addons/maaacks_game_template/base/translations/menus_translations.fr.translation")
disable_install_audio_busses=true
disable_update_check=false
disable_install_wizard=true
copy_path="res://examples/"

[maaacks_game_template]

disable_install_audio_busses=true
disable_update_check=false
disable_install_wizard=true

[plugins]

ai_assistant_hub/llm_api="ollama_api"
ai_assistant_hub/preferences/thinking_target=0
ai_assistant_hub/preferences/skip_greeting=false
ai_assistant_hub/preferences/always_scroll_to_bottom=false

[rendering]

renderer/rendering_method="gl_compatibility"
environment/defaults/default_clear_color=Color(0.15, 0.15, 0.25, 1)
