{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"--no-restore"
			],
			"group": { "kind": "build", "isDefault": true },
			"problemMatcher": "$msCompile"
		},
		{
			"label": "test",
			"command": "dotnet",
			"type": "process",
			"args": [
				"test",
				"--no-build"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Run UI Test by Class Name",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"test",
				"--settings",
				".runsettings",
				"--filter",
				"Class=${input:uiTestClassName}"
			],
			"options": {
				   "env": {
					   "GODOT_BIN": "${env:GODOT_BIN}"
				   }
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		}
	],
	"inputs": [
		{
			"id": "uiTestClassName",
			"type": "promptString",
			"description": "Enter the test class name (e.g. OmegaSpiral.Tests.Ui.Components.FrameComponentTests)"
		}
	]
}
