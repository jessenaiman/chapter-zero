{
	"version": "2.0.0",
	"tasks": [

		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"--no-restore"
			],
			"group": { "kind": "build", "isDefault": true },
			"problemMatcher": "$msCompile"
		},
		{
			"label": "test",
			"command": "dotnet",
			"type": "process",
			"args": [
				"test",
				"--no-build",
				"--settings",
				".runsettings"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": "$msCompile",
			"options": {
				"env": {
					"GODOT_BIN": "${env:GODOT_BIN}"
				}
			}
		},
	]
}
