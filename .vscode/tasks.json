{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/OmegaSpiral.csproj"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile",
            "presentation": {
          "echo": true,
          "reveal": "silent",
          "focus": false,
          "panel": "shared",
          "showReuseMessage": true,
          "clear": false
        }
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/OmegaSpiral.csproj"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/OmegaSpiral.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "launch godot editor",
            "command": "/home/adam/Godot_v4.5.1-rc2_mono_linux_x86_64/Godot_v4.5.1-rc2_mono_linux.x86_64",
            "type": "process",
            "args": [
                "--path",
                "${workspaceFolder}",
                "--editor"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        }
	]
}
