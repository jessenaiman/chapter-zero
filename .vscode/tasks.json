{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"--no-restore"
			],
			"problemMatcher": "$msCompile",
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "test",
			"command": "dotnet",
			"type": "shell",
			"args": [
				"test",
				"${workspaceFolder}/chapter-zero.csproj",
				"--logger:gdunit4;LogLevel=Detailed",
				"--configuration",
				"Debug",
				"--no-build",
				"--settings",
				"${workspaceFolder}/.runsettings",
				"--verbosity normal"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			},
			"problemMatcher": "$msCompile",
			"options": {
				"env": {}
			}
		},
		{
			"label": "watch",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"watch",
				"--project",
				"${workspaceFolder}/chapter-zero.csproj",
				"build"
			],
			"isBackground": true,
			"problemMatcher": {
				"pattern": "$msCompile",
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*dotnet watch.*",
					"endsPattern": "^.*successfully.*|^.*failed.*"
				}
			},
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		}
	]
}
